<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TrafficActivity"
    tools:showIn="@layout/activity_traffic">

    <ImageButton
        android:id="@+id/trafficlow"
        android:layout_width="182dp"
        android:layout_height="146dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="111dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trafficnormal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trafficlow" />

    <ImageButton
        android:id="@+id/trafficnormal"
        android:layout_width="182dp"
        android:layout_height="146dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="111dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/trafficdense"
        app:layout_constraintStart_toEndOf="@+id/trafficlow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/trafficlow" />

    <ImageButton
        android:id="@+id/trafficdense"
        android:layout_width="182dp"
        android:layout_height="146dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="111dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trafficnormal"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/trafficlow" />
</android.support.constraint.ConstraintLayout>